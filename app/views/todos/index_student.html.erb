<!DOCTYPE html>
<html>
<head>
 <meta charset="utf-8">
 <title>宿題リスト</title>
</head>
<body>
 <h1>宿題リスト</h1>
 <ul>
   <% @todos.each do |todo| %>
   <li>
     <%= todo.subject %>
     <%= todo.grade %>
     <%= todo.classroom %>
     <%= todo.deadline %>
     <%= todo.discript %>
     <%= todo.text %>
     <form action="/todos/<%= todo.id %>"
           style="display: inline;" 
           method="POST">
       <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
       <input name="_method" type="hidden" value="DELETE">
     </form>
   </li>
   <% end %>
 </ul>
</body>
</html>